\newcommand{\audioannot}[1]{\pdfannot%
{%
/Subtype /Text%
/F 1%
/T (Audio)%
/Contents (\pdfescapestring{#1})%
}}

\def\audio{\@ifnextchar<{\beaudiomer@audio}{\beaudiomer@@audio}}
\long\def\beaudiomer@audio<#1>#2{\only<#1>{\audioannot{#2}}}
\long\def\beaudiomer@@audio#1{\only<\c@beamerpauses>{\audioannot{#1}}}

